# -*- ruby -*-
$:.unshift(File.expand_path('../lib', __FILE__))
$:.unshift(File.expand_path('../../rocket/lib/', __FILE__))
require 'rspec/core/rake_task'
require 'rake/rdoctask'
require 'rocket/version'

RSpec::Core::RakeTask.new(:spec) do |t|
  t.pattern = 'spec/ruby/**/*_spec.rb'
  t.rspec_opts = %q[-Ilib -c -b]
end

RSpec::Core::RakeTask.new(:rcov) do |t|
  t.rcov = true
  t.rspec_opts = %q[-Ilib -c -b]
  t.rcov_opts = %q[-Ilib -T -x "spec"]
end

Rake::RDocTask.new do |rdoc|
  rdoc.title = "Rocket JavaScript Tools #{Rocket.version}"
  rdoc.rdoc_dir = 'rdoc'
  rdoc.rdoc_files.include('README*')
  rdoc.rdoc_files.include('lib/**/*.rb')
end

desc "Build current version as a rubygem"
task :build do
  `gem build rocket-js.gemspec`
  `mkdir -p pkg`
  `mv rocket-js-*.gem pkg/`
end

desc "Relase current version to rubygems.org"
task :release => :build do
  `gem push pkg/rocket-js-#{Rocket.version}.gem`
end

desc "Perform installation via rubygems"
task :install => :build do
  `gem install pkg/rocket-js-#{Rocket.version}.gem`
end

namespace :js do
  desc 'Bundle and minify source files.'
  task :build do
    require 'rocket-js'
    Rocket::JS::Builder.new(File.dirname(__FILE__), true).generate_script
  end

  desc 'Start test server.'
  task :test do
    exec 'ruby -I../rocket/lib -Ilib test/js/app.rb'
  end
end

task :default => :spec
